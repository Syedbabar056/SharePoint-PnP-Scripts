# List of SharePoint site URLs
$Sites = 
"https://abc.sharepoint.com/sites/dev",
"https://abc.sharepoint.com/sites/dev1",
""

# Group name patterns to exclude (case-insensitive match)
$ExcludedGroupPatterns = @("Owners", "Visitors", "Members", "Admins", "Service Account")

# Store groups
$skippedGroups = @()
$deletableGroups = @()

foreach ($site in $Sites) {
    if (!$site) { Write-Host "Sites loop ended." -ForegroundColor DarkGray; break }

    Write-Host "`nüåê Connecting to SharePoint Online Site: $site" -ForegroundColor Cyan
    Connect-PnPOnline -Url $site -UseWebLogin

    Write-Host "üìã Fetching SharePoint groups..." -ForegroundColor Yellow
    $groupsList = Get-PnPGroup

    foreach ($grp in $groupsList) {
        $matchedPattern = $ExcludedGroupPatterns | Where-Object { $grp.Title -match $_ }

        if ($matchedPattern) {
            $skippedGroups += [PSCustomObject]@{
                SiteUrl = $site
                GroupTitle = $grp.Title
                Reason = "Matched exclusion pattern: $matchedPattern"
            }
        } else {
            $deletableGroups += [PSCustomObject]@{
                SiteUrl = $site
                GroupTitle = $grp.Title
                GroupRef = $grp
            }
        }
    }
}

# Step 1: Show skipped groups
if ($skippedGroups.Count -gt 0) {
    Write-Host "`n‚õî These groups were skipped due to exclusion rules:" -ForegroundColor Yellow
    $skippedGroups | Sort-Object SiteUrl, GroupTitle | Format-Table SiteUrl, GroupTitle, Reason -AutoSize
} else {
    Write-Host "`n‚úÖ No groups matched exclusion rules." -ForegroundColor Green
}

# Step 2: Proceed with deletion prompt
$deletionMode = Read-Host "`n‚ùì How would you like to delete groups? Type 'All' for bulk delete or 'Each' for group-by-group"

if ($deletionMode -notin @("All", "Each")) {
    Write-Host "‚ùå Invalid input. Please run again and choose either 'All' or 'Each'" -ForegroundColor Red
    return
}

if ($deletableGroups.Count -eq 0) {
    Write-Host "‚ÑπÔ∏è No deletable groups found after filtering." -ForegroundColor Gray
    return
}

if ($deletionMode -eq "Each") {
    foreach ($entry in $deletableGroups) {
        Write-Host "`nüîó Site: $($entry.SiteUrl)" -ForegroundColor Cyan
        Connect-PnPOnline -Url $entry.SiteUrl -UseWebLogin

        $confirm = Read-Host "‚ö†Ô∏è Are you sure you want to delete group '$($entry.GroupTitle)'? [Y/N]"
        if ($confirm -ne "Y") {
            Write-Host "‚ùå Skipped deleting group '$($entry.GroupTitle)'" -ForegroundColor Gray
            continue
        }

        Write-Host "üóë Deleting group '$($entry.GroupTitle)'..." -ForegroundColor Red
        #Remove-PnPGroup -Identity $entry.GroupRef -Force
    }

    Write-Host "`n‚úÖ All selected groups processed in 'Each' mode." -ForegroundColor Green
}
else {
    # Show list before bulk delete
    Write-Host "`nüßæ The following groups are marked for deletion:" -ForegroundColor Cyan
    $deletableGroups | Sort-Object SiteUrl, GroupTitle | Format-Table SiteUrl, GroupTitle -AutoSize

    $bulkConfirm = Read-Host "`n‚ö†Ô∏è Are you sure you want to delete ALL of these groups? Type 'YES' to confirm"
    if ($bulkConfirm -eq "YES") {
        foreach ($entry in $deletableGroups) {
            Write-Host "üóë Deleting '$($entry.GroupTitle)' from $($entry.SiteUrl)" -ForegroundColor Red
            Connect-PnPOnline -Url $entry.SiteUrl -UseWebLogin
           # Remove-PnPGroup -Identity $entry.GroupRef -Force
        }

        Write-Host "`n‚úÖ Bulk deletion completed." -ForegroundColor Green
    } else {
        Write-Host "‚ùå Bulk deletion canceled." -ForegroundColor Yellow
    }
}
